{
  "handoff": "intellij-codex-unified",
  "version": 1,
  "lanes": [
    {
      "name": "core-api",
      "paths": [
        "build.gradle.kts",
        "zakum-core/**",
        "zakum-api/**"
      ]
    },
    {
      "name": "battlepass",
      "paths": [
        "zakum-battlepass/**"
      ]
    },
    {
      "name": "crates",
      "paths": [
        "zakum-crates/**"
      ]
    },
    {
      "name": "pets",
      "paths": [
        "zakum-pets/**"
      ]
    }
  ],
  "inventory": {
    "build_release_verification": true,
    "core_api_threadguard_expansion": true,
    "ace_target_bounds": true,
    "ace_standard_effects_expansion": true,
    "api_compat_smoke_tests": true,
    "battlepass_rewards_expansion": true,
    "crates_script_rewards": true,
    "pets_lifecycle_scripts": true,
    "handoff_docs_present": true
  },
  "validation": [
    "git diff --check",
    "scan:releaseShadedCollisionAudit+threadguard paths",
    "scan:ACE target bounds/effects",
    "scan:API compatibility smoke accessors",
    "scan:BattlePass reward model/parser/executor",
    "scan:Crates script[]",
    "scan:Pets lifecycle placeholders"
  ]
}
